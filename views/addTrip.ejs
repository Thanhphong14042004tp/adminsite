<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Thêm Chuyến Đi</title>
  <style>
    /* Reset các margin và padding */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Arial', sans-serif;
      background-color: #f4f7fc;
      color: #333;
    }

    h1 {
      text-align: center;
      color: #007bff;
      margin-bottom: 20px;
    }

    .form-container {
      background-color: white;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      max-width: 600px;
      margin: 40px auto;
    }

    .form-container h1 {
      font-size: 24px;
      margin-bottom: 20px;
    }

    label {
      display: block;
      margin: 10px 0 5px;
      font-size: 16px;
      font-weight: 500;
    }

    input[type="text"], input[type="datetime-local"] {
      width: 100%;
      padding: 12px;
      margin-bottom: 20px;
      border-radius: 6px;
      border: 1px solid #ccc;
      font-size: 16px;
      background-color: #f9f9f9;
      transition: border-color 0.3s ease;
    }

    input[type="text"]:focus, input[type="datetime-local"]:focus {
      border-color: #007bff;
      outline: none;
    }

    button {
      width: 100%;
      padding: 14px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 18px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #0056b3;
    }

    /* Thêm hiệu ứng khi hover */
    input[type="text"]:hover, input[type="datetime-local"]:hover {
      border-color: #007bff;
    }

    /* Tạo thêm hiệu ứng loading khi submit form */
    .loading {
      display: none;
      text-align: center;
      font-size: 18px;
      color: #007bff;
      margin-top: 20px;
    }

    .loading.active {
      display: block;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h1>Thêm Chuyến Đi</h1>
    <form action="/trips/add" method="POST" id="addTripForm">
      <label for="name">Tên Chuyến Đi:</label>
      <input type="text" id="name" name="name" required><br><br>
      
      <label for="from">Điểm Xuất Phát:</label>
      <input type="text" id="from" name="from" required><br><br>
      
      <label for="to">Điểm Đến:</label>
      <input type="text" id="to" name="to" required><br><br>
      
      <label for="departureTime">Thời Gian Khởi Hành:</label>
      <input type="datetime-local" id="departureTime" name="departureTime" required><br><br>
      
      <button type="submit">Thêm Chuyến Đi</button>
    </form>

    <div id="loading" class="loading">Đang thêm chuyến đi...</div>
  </div>

  <script>
    const form = document.getElementById('addTripForm');
    const loadingMessage = document.getElementById('loading');

    form.addEventListener('submit', (event) => {
      loadingMessage.classList.add('active'); // Hiển thị loading khi submit
    });
  </script>
</body>
</html>
